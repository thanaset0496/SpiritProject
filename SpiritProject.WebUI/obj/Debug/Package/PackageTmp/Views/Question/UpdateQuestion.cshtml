    ViewBag.Title = "UpdateQuestion";
}
<div class="content">

    <div class="question-container">
        <div class="row">
            <div class="col-md-12">
                <div class="hpanel">
                    <div class="panel-body">
                        <form action="#" id="loginForm">
                            <div class="row">
